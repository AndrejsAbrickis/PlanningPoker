{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "typescript-eslint-parser"
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "eqeqeq": "error",
        "no-magic-numbers": "error",
        "radix": "error",
        "comma-dangle": [
            "error",
            "always-multiline"
        ]
    }
}